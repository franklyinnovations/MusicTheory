.preview-link
    .link
        padding-bottom: 10px;

    .preview-window
        position: absolute;
        display: none;
        width: 50px;
        z-index: 1;
        float: left;
        top: 90%;
        left: 10px;
        text-align: center;
        font-size: 1em;

        &.active
            display: block;
        &.notes
            width: 200px;

        .preview-container
            background-color: $white;
            border: 2px solid $blue;
            padding: 5px;

        .preview-arrow
            color: $blue;
            text-align: left;
            line-height: 0;

            .glyphicon
                margin: 0;
                line-height: 0.5;

